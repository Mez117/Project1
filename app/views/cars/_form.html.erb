<%= form_for(@car, :html => { :multipart => true}) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :image %>
    <%= f.cl_image_upload :image_url %>

    <%= f.label :manufacturer_id %>
    <%= f.select :manufacturer_id, Manufacturer.pluck(:name, :id), :include_blank => true %>

    <%= f.label :engine_id %>
    <%= f.select :engine_id, Engine.pluck(:name, :id), :include_blank => true %>

    <%= f.label :trim_id %>
    <%= f.select :trim_id, Trim.pluck(:color, :id), :include_blank => true %>

    <%= f.submit %>

<% end %>