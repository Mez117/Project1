<h1>All Cars</h1>

<% @cars.each do |car| %>

    <h2><%= car.name %></h2>
    <%= link_to cl_image_tag(car.image, :class => 'thumb'), car %>
    <% image_tag(car.image) do |a| %>
    <% if a.last(3) == "jpg" || a.last(4) == "jpeg" || a.last(3) == "png" || a.last(3) == "gif" %>
        <%= link_to image_tag(car.image, :class => 'thumb'), car %>
    <% end %>
    <% end %>
    <%= link_to image_tag("https://picsum.photos/500", :class => 'thumb'), car if car.image.nil? || car.image.empty? %>

<% end %>
