<h1><%= @car.name %></h1>

<%= image_tag @car.image, :class => 'feature' %>

<ul>

    <li><%= link_to @car.manufacturer.name, @car.manufacturer %></li>
    <li><%= link_to @car.trim.color, @car.trim %></li>
    <li><%= link_to @car.engine.name, @car.engine %></li>

</ul>

<div class="controls">
    <%= link_to "Edit car", edit_car_path(@car) %>
    <%= link_to "Delete car", @car, :method => :delete, :data => { :confirm => "Are your sure?" } %>
</div> 