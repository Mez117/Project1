<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= cloudinary_js_config %>
    
  </head>

  <body>
    
    <nav class="navbar navbar-dark bg-dark fixed-top">
      <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarContent">
              <ul class="navbar-nav">
              <% if @current_user.present? %>
                  <% if @current_user.admin? %>
                  <li class="nav-item">
                      <a class="nav-link"><%= link_to "All users", users_path %></a>
                  </li>
                  <% end %>
                  <li class="nav-item">
                      <a class="nav-link"><%= link_to "All Cars", cars_path %></a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link"><%= link_to "New Car", new_car_path %></a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link"><%= link_to "All Manufacturers", manufacturers_path %></a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link"><%= link_to "New Manufacturer", new_manufacturer_path %></a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link"><%= link_to "All Engines", engines_path %></a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link"><%= link_to "New Engine", new_engine_path %></a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link"><%= link_to "Log out: #{ @current_user.email }", login_path, :method => :delete %></a>
                  </li>
              <% else %>
                  <li class="nav-item">
                      <a class="nav-link"><%= link_to "Sign up!", new_user_path %></a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link"><%= link_to "Sign in!", login_path %></a>
                  </li>
              <% end %>
              </ul>
          </div>
      </div>
    </nav>
    
    <%= yield %>

    </div>
  </body>

  <script>
  $(document).ready(function(){
    $('.navbar-toggler').click(function(){
      $('.navbar-collapse').toggleClass('show');
    });
    // $('.navbar-toggler').click(function(){
    //   $('.navbar-collapse').toggleClass('show collapsing');
    // });
  });
  </script>

</html>
